                    <GuiElement type="bitmap" profile="shopListAttributeIcon" id="attrIcon[12]"/>
                    <GuiElement type="text" profile="shopListAttributeText" text="Dummy" id="attrValue[12]"/>
                    <GuiElement type="flowLayout" profile="shopListAttributeIconsLayout" id="attrIconsLayout[12]"/>
                </GuiElement>
        </GuiElement>

        <GuiElement type="threePartBitmap" profile="horizontalListSliderRightDocked" size="1400px 12px">
            <GuiElement type="slider" profile="horizontalListSliderBar" dataElementId="itemsList" size="1392px 6px" />
        </GuiElement>

        <GuiElement type="text" profile="ingameMenuNoContentText" text="$l10n_ui_noShopItems" id="noItemsText" />
    </GuiElement>
</GUI>
